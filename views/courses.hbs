{{> carousel}}
<div class="container">
    <h1>{{title}}</h1>
    <div class="row">
        <div class="col-lg-8">
            {{#if data}}
                   <div class="card"  >
                                <div class="card-img">
                                       <img src="{{data.img}}" class="card-img-top" alt=" ">
                                </div>
                            <div class="card-body">
                                <h5 class="card-title">{{data.title}}</h5>
                                <div class="d-flex justify-content-between">
                                    <p class="card-price">{{data.price}}</p>
                                    <p class="card-category"><span>Kategoriya:</span> {{data.category}}</p>
                                </div>
                                <div class="d-flex justify-content-end  align-items-center">
                                    <p class="date m-0"><span class="btn btn-warning "><i class="far fa-calendar-minus"></i></span> {{data.date}}</p>
                                </div>
                            </div>
                            </div>
            {{/if}}
        </div>
        <div class="col-lg-4">
            <h3 class="about_title">Kurs haqida batafsil </h3>
            <p class="about_comment">
                {{data.comment}}
            </p>
        </div>
        
    </div>
</div>